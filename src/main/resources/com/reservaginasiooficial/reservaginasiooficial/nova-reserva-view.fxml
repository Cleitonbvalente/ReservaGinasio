<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.reservaginasiooficial.reservaginasiooficial.NovaReservaController"
      spacing="15"
      alignment="TOP_CENTER"
      prefWidth="500">

    <padding>
        <Insets top="20" right="25" bottom="20" left="25"/>
    </padding>

    <Label text="Nova Reserva"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="30"/>
            <ColumnConstraints percentWidth="70"/>
        </columnConstraints>

        <Label text="Esporte:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbEsporte" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Data:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpData" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Horário:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbHorario" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <Label text="Horários Disponíveis: 07:00-09:00 | 09:00-11:00 | ... | 20:00-22:00"
           style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-font-style: italic;"/>

    <HBox spacing="15" alignment="CENTER">
        <Button text="Reservar" onAction="#onReservarClicked"/>
        <Button text="Cancelar" onAction="#onCancelarClicked"/>
    </HBox>
</VBox>
