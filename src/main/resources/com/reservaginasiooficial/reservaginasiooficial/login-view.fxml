<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.reservaginasiooficial.reservaginasiooficial.LoginController"
      spacing="10"
      alignment="CENTER"
      prefWidth="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Área do Usuário"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="Login">
                <VBox spacing="10">
                    <TextField fx:id="txtEmailLogin" promptText="E-mail"/>
                    <PasswordField fx:id="txtSenhaLogin" promptText="Senha"/>
                    <Button text="Entrar" onAction="#onLoginClicked"/>
                </VBox>
            </Tab>

            <Tab text="Cadastro">
                <VBox spacing="10">
                    <TextField fx:id="txtNomeCadastro" promptText="Nome Completo"/>
                    <TextField fx:id="txtEmailCadastro" promptText="E-mail"/>
                    <PasswordField fx:id="txtSenhaCadastro" promptText="Senha"/>
                    <PasswordField fx:id="txtConfirmarSenha" promptText="Confirmar Senha"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="btnSelecionarFoto" text="Selecionar Foto"
                                onAction="#onSelecionarFotoClicked"/>
                        <Label fx:id="lblNomeArquivo" style="-fx-font-style: italic;"/>
                    </HBox>

                    <Button text="Cadastrar" onAction="#onCadastrarClicked"/>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>

    <Label text="© 2023 Ginásio Esportivo"
           style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
</VBox>
