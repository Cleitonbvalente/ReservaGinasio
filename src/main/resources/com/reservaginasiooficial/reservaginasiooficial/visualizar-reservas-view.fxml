<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.reservaginasiooficial.reservaginasiooficial.VisualizarReservasController"
      spacing="10"
      style="-fx-background-color: #f5f5f5;">

    <!-- Padding correto usando a tag <padding> -->
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Cabeçalho -->
    <Label text="Visualização de Horários Reservados"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <!-- Barra de filtros -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 5;">
        <Label text="Filtrar por:"/>
        <DatePicker fx:id="datePicker" promptText="Selecione uma data"/>
        <TextField fx:id="tfNome" promptText="Nome do responsável" style="-fx-pref-width: 200;"/>
        <TextField fx:id="tfEsporte" promptText="Tipo de esporte" style="-fx-pref-width: 150;"/>
        <Button text="Aplicar Filtros" onAction="#onFiltrarClicked"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </HBox>

    <!-- Tabela de horários -->
    <TableView fx:id="tableView" style="-fx-background-color: white;">
        <columns>
            <!-- Certifique-se que os fx:id batem com o controller -->
            <TableColumn fx:id="colResponsavel" text="Responsável" prefWidth="200"/>
            <TableColumn fx:id="colEsporte" text="Esporte" prefWidth="150"/>
            <TableColumn fx:id="colData" text="Data" prefWidth="120"/>
            <TableColumn fx:id="colHorario" text="Horário" prefWidth="100"/>
        </columns>
    </TableView>

    <!-- Rodapé -->
    <Label text="* Horários disponíveis: 07:00-09:00, 09:00-11:00, ..., 20:00-22:00"
           style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
</VBox>
