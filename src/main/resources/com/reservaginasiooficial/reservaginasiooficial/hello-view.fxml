<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.reservaginasiooficial.reservaginasiooficial.HelloController"
      alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <Label text="Sistema de Reservas de Ginásio" style="-fx-font-size: 24px; -fx-font-weight: bold;">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>


    <VBox alignment="CENTER" spacing="10">
        <Button text="Visualizar Reservas" onAction="#onVisualizarReservasClicked" onMouseClicked="#onVisualizarReservasClicked"
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px;"/>

        <Button text="Fazer Nova Reserva" onAction="#onNovaReservaClicked"
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px;"/>

        <Button text="Minhas Reservas" onAction="#onMinhasReservasClicked"
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px;"/>

        <Button text="Área do Usuário" onAction="#onLoginClicked"
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px;"/>
    </VBox>

    <Label text="© 2023 Ginásio Esportivo" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>

</VBox>