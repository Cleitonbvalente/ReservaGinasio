<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.reservaginasiooficial.reservaginasiooficial.HelloController"
      alignment="CENTER" spacing="20" style="-fx-padding: 20;">

    <Label text="Sistema de Reservas de Ginásio" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <VBox fx:id="vbOpcoesUsuario" alignment="CENTER" spacing="10">
        <Button fx:id="btnVisualizarReservas" text="Visualizar Reservas"
                onAction="#onVisualizarReservasClicked"
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px;"/>

        <Button fx:id="btnNovaReserva" text="Fazer Nova Reserva"
                onAction="#onNovaReservaClicked"
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px;"/>

        <Button fx:id="btnMinhasReservas" text="Minhas Reservas"
                onAction="#onMinhasReservasClicked"
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px;"/>

        <Button fx:id="btnAreaUsuario" text="Área do Usuário"
                onAction="#onLoginClicked"
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px;"/>

        <Button fx:id="btnPerfil" text="Meu Perfil"
                onAction="#onPerfilClicked"
                style="-fx-font-size: 14px; -fx-min-width: 200px; -fx-min-height: 40px; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    </VBox>

    <Label fx:id="lblMensagemLogin" text=""
           style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-alignment: CENTER;"/>

    <Label text="© 2023 Ginásio Esportivo" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
</VBox>
